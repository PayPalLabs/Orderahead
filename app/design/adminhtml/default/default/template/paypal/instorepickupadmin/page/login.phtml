<script type="text/javascript">
    function loginFormSubmit(sender){
        if($('#txt-login-name').val() == '' || $('#txt-login-password').val() == ''){
            alert('<?php echo $this->__('Username and password are required')?>');
            return false;
        }
        else{
            sender.submit();
            return true;
        }
    }
</script>